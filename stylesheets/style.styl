primary = #16a085

body
	padding 0
	margin 0

header
	position: absolute
	top: 5px
	right: 20px

body > div
	display flex
	flex-wrap: wrap-reverse
	min-height: 100vh
	& > div
		flex-grow 5
		position: relative
		display:flex
		min-height: 100vh
		align-items: center
		justify-content: center
		flex-direction: column

strong
	font-weight: bolder


#sidebar
	flex-grow: 1
	min-height 0
	background-color: #2c3e50
	& > div
		display flex
		justify-content flex-start
		align-items center
		flex-direction: column
		width 100%
		height 100%
		& > div:first-child
			width 90vw
			max-width 300px
			margin-bottom 40px
			margin-top: 50px
			display flex
			position relative
			& .stockInput
				flex-grow 1
				border-radius: 0
			& .btn
				border-top-left-radius: 0
				border-bottom-left-radius: 0
	& .autocomplete
		position absolute
		top 100% - 2px
		left 0
		width 100% - 16px
		z-index: 5
		& p
			margin-bottom 0
			border-top 0
			border-radius 0
			cursor pointer
			transition: border 0.2s ease-out
			border: 0
			height auto
			&:hover
				border-left: 10px solid primary
	& .ticker
		width: 300px
		position: relative
		height: 100px
		background-color #f2f5fa
		color dimgray
		margin: 20px auto 0 auto
		border-left: 20px solid
		box-shadow 0 0 15px rgba(0,0,0,0.5)
		transition: all 0.2s ease-out
		padding: 5% 10% 5% 5%
		padding-top: 30px
		box-sizing: border-box
		& strong
			color: rgba(0,0,0,0.8)
			font-size: 2.2rem
			margin: 0
		& small
			color: gray
			font-size: 13px
			line-height 1
			display block
			margin: 0
			padding: 0
		&:hover
			box-shadow 0 5px 15px rgba(0,0,0,0.5)
			margin: 15px auto 5px auto
			background-color  white
			& span
				color: #ccc

		& span
			position: absolute
			cursor: pointer
			right: 15px
			top: 50%
			transform: translateY(-50%)
			transition color 0.2s ease-out
			font-size 2.5rem
			color: #f2f5fa

	& #tickers
		flex-grow 1
		flex-wrap: wrap
		width: 100%
		display flex
		align-items: flex-start
		align-content: flex-start

@media (min-width: 1000px)
	#sidebar
		width: 350px


[class*="fui-"]
	color white

#container
	background-color: white
	width: 90%
	min-height: 80%

small
	padding-top: 50px
	margin-bottom 10px
	color rgba(255,255,255,0.5)
